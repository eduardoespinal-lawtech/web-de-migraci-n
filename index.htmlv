  <script>
  document.addEventListener('DOMContentLoaded', () => {
    const root = document.documentElement;
    const body = document.body;

    // A√±o din√°mico
    const y = new Date().getFullYear();
    document.querySelectorAll('#year').forEach(n => n.textContent = y);

    // Idioma
    const langBtns = [document.getElementById('btnES'), document.getElementById('btnEN'),
                      document.getElementById('btnES-mobile'), document.getElementById('btnEN-mobile')].filter(Boolean);
    const testiBtnES = document.getElementById('toggle-test');
    const testiBtnEN = document.getElementById('toggle-test-en');

    const setLang = (lang) => {
      root.setAttribute('data-lang', lang);
      root.setAttribute('lang', lang);
      try{ localStorage.setItem('lang', lang) }catch(e){}

      // Toggle botones testimonios y CTA
      if (testiBtnES && testiBtnEN){
        if (lang === 'es'){ testiBtnES.classList.remove('hidden'); testiBtnEN.classList.add('hidden'); }
        else { testiBtnES.classList.add('hidden'); testiBtnEN.classList.remove('hidden'); }
      }
      // WhatsApp CTA en contacto
      document.querySelectorAll('#contacto a.btn-primary').forEach(a=>{
        const isES = (lang === 'es');
        a.classList.toggle('hidden', (isES && a.getAttribute('lang')==='en') || (!isES && a.getAttribute('lang')==='es'));
      });

      // Pintar estado visual en header
      langBtns.forEach(b=>{
        const isES = b.id.includes('ES');
        const active = (isES && lang==='es') || (!isES && lang==='en');
        b.classList.toggle('font-semibold', active);
        b.classList.toggle('text-gray-900', active);
        b.classList.toggle('text-gray-600', !active);
        b.setAttribute('aria-pressed', String(active));
      });
    };
    let storedLang = 'es'; try{ storedLang = localStorage.getItem('lang') || 'es' }catch(e){}
    setLang(storedLang);
    langBtns.forEach(b => b.addEventListener('click', ()=> setLang(b.id.includes('ES') ? 'es' : 'en')));

    // Men√∫ m√≥vil
    const menuToggle = document.getElementById('menu-toggle');
    const menuMobile = document.getElementById('menu-mobile');
    const iconOpen = document.getElementById('icon-open');
    const iconClose = document.getElementById('icon-close');
    const mobileLinks = document.querySelectorAll('#menu-mobile a, #menu-mobile button');

    const toggleMenu = (forceOpen=null) => {
      const isOpen = forceOpen!==null ? forceOpen : menuMobile.classList.contains('hidden');
      menuMobile.classList.toggle('hidden', !isOpen);
      menuMobile.classList.toggle('flex', isOpen);
      iconOpen.classList.toggle('hidden', isOpen);
      iconClose.classList.toggle('hidden', !isOpen);
      menuToggle.setAttribute('aria-expanded', String(isOpen));
      body.style.overflow = isOpen ? 'hidden' : '';
    };
    if(menuToggle && menuMobile){
      menuToggle.addEventListener('click', ()=> toggleMenu());
      mobileLinks.forEach(el => el.addEventListener('click', ()=> toggleMenu(false)));
    }

    // Testimonios toggle
    const testiWrap = document.getElementById('testi-wrap');
    if (testiWrap) testiWrap.classList.remove('active');
    const initES = testiBtnES ? testiBtnES.textContent.trim() : 'Mostrar Testimonios (3)';
    const initEN = testiBtnEN ? testiBtnEN.textContent.trim() : 'Show Testimonials (3)';
    const toggleTest = () => {
      const active = testiWrap.classList.toggle('active');
      if (testiBtnES) testiBtnES.textContent = active ? 'Ocultar Testimonios' : initES;
      if (testiBtnEN) testiBtnEN.textContent = active ? 'Hide Testimonials' : initEN;
    };
    if (testiBtnES) testiBtnES.addEventListener('click', toggleTest);
    if (testiBtnEN) testiBtnEN.addEventListener('click', toggleTest);

    // Reveal on scroll
    const io = new IntersectionObserver(entries=>{
      entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('show'); io.unobserve(e.target) }});
    }, { threshold:.12 });
    document.querySelectorAll('.reveal').forEach(el=> io.observe(el));
  });
  </script>
</body>
